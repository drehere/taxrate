/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

.list-container {
  background-color: #f5f5f5;
  display: block;
}

.list-item-title {
  color: #a6a6a6;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  font-size: 14px;
  margin-left: 40rpx;
}

.list-item,.list-item-large{
  height: 90rpx;
  background-color: #fff;
  padding-left: 40rpx;
  padding-right: 40rpx;
  flex-direction: row;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  font-size: 15px;
}
.list-item-large{
  height: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.list-item:active {
  background: #dedede;
}

.list-item-label {
  font-size: 12px;
  text-align: left;
}

.list-item-head {
  font-size: 14px;
  text-align: left;
}

.list-item-right {
  font-size: 12px;
}

.list-item-left {
  flex: auto;
}

.list-container-divider-container {
  height: 1px;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background-color: #fff;
}

.list-container-divider {
  background-color: #f5f5f5;
  height: 1px;
  padding: 0px;
}

page {
  width: 100%;
  height: 100%;
}

.boot-info {
  position: fixed;
  bottom: 40rpx;
  text-align: center;
  width: 100%;
  font-size: 12px;
}

.bottom-tip{
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: black;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
