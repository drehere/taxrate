/* pages/main/main.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scroll-container {
  height: 1400rpx;
  padding-top: 30rpx;
  background-color: #f5f5f5;
}

.form-container {
  margin-top: 20rpx;
  display: block;
}

.form-item {
  flex-direction: row;
  display: flex;
  background: #fff;
  height: 90rpx;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.form-container view label {
  order: 0;
  text-align: left;
  margin-right: 30rpx;
  font-size: 14px;
  color: #333;
  flex-wrap: nowrap;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: initial;
}

.form-container view input {
  order: 1;
  border: 0px solid #fff;
  flex-shrink: 1;
  font-size: 14px;
  color: #717171;
  margin-right: 20rpx;
}

.form-container view input:focus {
  border-color: black;
  border-style: solid;
  border-width: 2rpx;
}

.form-container-divider-container {
  height: 1px;
  padding-left: 40rpx;
  padding-right: 40rpx;
  background-color: #fff;
}

.form-container-divider {
  background-color: #f5f5f5;
  height: 1px;
  padding: 0px;
}

.form-bottom {
  flex-direction: row;
  display: flex;
  background: #f3f3f3;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.form-container view button {
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
  text-align: center;
  flex: auto;
}

/*result css*/

.result-title {
  color: #a6a6a6;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
  font-size: 14px;
  margin-left: 40rpx;
}

.result-container {
  display: block;
}

.result-item {
  flex-direction: row;
  display: flex;
  background: #fff;
  height: 90rpx;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: 15px;
}

.result-item .label {
  flex-flow: 0;
  font-size: 15px;
}

.result-item .data {
  margin-left: 20rpx;
  flex-grow: 1;
  font-size: 15px;
  color: #717171;
}

.result-item .unit {
  flex-flow: 0;
  font-size: 15px;
}

.result-item .result-desc {
  font-size: 15px;
  color: #717171;
}

.result-share-btn {
  margin: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12px;
  text-align: center;
  flex: auto;
}
